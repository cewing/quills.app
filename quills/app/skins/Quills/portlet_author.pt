<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="plone">

  <body>

    <div metal:define-macro="portlet"
         tal:define="weblogview context/@@weblogview;
                     authors context/getAuthors;
                     creator context/Creator;
                     authors python:here.removeCreatorFromAuthors(creator, authors)"
         tal:condition="weblogview/isWeblogContent">

      <dl class="portlet"
          id="portlet-author">

        <dt class="portletHeader"
            i18n:translate="box_blog">
          People Posting to this Blog
        </dt>

        <tal:comment condition="nothing"> Show the author of this post, if appropriate </tal:comment>
        <tal:define tal:condition="python: here.meta_type == 'WeblogEntry'"
                    tal:define="author creator;
                                oddrow string:odd;">
          <dd class="portletItem odd" metal:define-macro="author"
              tal:define="authorfolder python: mtool.getPersonalFolder(author);
                          portrait python: mtool.getPersonalPortrait(author);
                          authorinfo python: mtool.getMemberInfo(author);"
              tal:attributes="class string:portletItem $oddrow">

            <h1 class="documentFirstHeading"
                tal:condition="authorinfo/fullname">
              <a href=""
                 tal:attributes="href string:${portal_url}/author/${author}"
                 tal:content="authorinfo/fullname">
                Author Name
              </a>
            </h1>

            <tal:comment condition="nothing"> No 'Full Name' set in the Profile </tal:comment>
            <h1 class="documentFirstHeading"
                tal:condition="not: authorinfo/fullname">
              <a href=""
                 tal:attributes="href string:${portal_url}/author/${author}"
                 tal:content="author">
                  Author ID
              </a>
            </h1>

            <div class="discreet"
                 condition="authorinfo/location"
                 i18n:translate="text_location">
              Location:
              <span tal:content="authorinfo/location"
                    tal:omit-tag=""
                    i18n:name="location">
                Some location
              </span>
            </div>


            <img src=""
                 alt=""
                 title=""
                 class="portraitPhoto"
                 style="display:inline; float:left; margin-right:10px;"
                 tal:attributes="src portrait/absolute_url;
                                 alt authorinfo/fullname;
                                 title authorinfo/fullname;" />

            <div tal:condition="authorinfo/description"
                 tal:content="authorinfo/description" />

            <div class="visualClear" style="height:1px;">&nbsp;</div>

          </dd>
        </tal:define>


        <tal:comment condition="nothing"> List all authors that have posted to this Weblog. This
             shows up on the blog root and when viewing the archives
             folder. </tal:comment>
        <tal:listauthors tal:repeat="author authors">
          <tal:define tal:define="oddrow repeat/author/odd;
                                  oddrow python:test(oddrow,'odd','even');">
            <metal:author
                metal:use-macro="context/portlet_author/macros/author">
              author
            </metal:author>
          </tal:define>

        </tal:listauthors>


      </dl>

    </div>

  </body>

</html>

