<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="quills">
  <body>
    <div metal:define-macro="portlet"
         tal:omit-tag=""
         tal:define="weblogview context/@@weblogview"
         tal:condition="weblogview/isWeblogContent">

      <dl class="portlet"
          id="portlet-weblogcloud"
          tal:define="weblog weblogview/getParentWeblog;
                      tagcloudview context/@@tagcloudview;
                      items tagcloudview/getCloud;"
          tal:condition="items">
          
          <div metal:use-macro="here/tag_cloud/macros/tag_cloud">
            Render a tag cloud.
          </div>

      </dl>
    </div>
  </body>
</html>
