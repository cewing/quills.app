<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="quills">
  <head><title></title></head>
  <body>

    <div metal:define-macro="portlet"
         tal:omit-tag=""
         tal:define="weblogview context/@@weblogview"
         tal:condition="weblogview/isWeblogContent"> 
      <dl class="portlet" id="portlet-weblogtopics"
          tal:define="parent weblogview/getParentWeblog">
        <dt class="portletHeader"
            i18n:translate="heading_topics">
          Topics
        </dt>
        <dd class="portletFooter">
          <a href=""
             class="tile"
             tal:attributes="href string:${parent/absolute_url}/topics"
             i18n:translate="topic_detail">
            Topics in Detail&hellip;
          </a>
        </dd>
        <dd class="portletItem odd">
          <ul class="portletNavigationTree navTreeLevel0">
            <tal:loop repeat="topic parent/getTopics">
              <li class="navTreeItem">
                <div>
                  <a href="" class="visualIconPadding"
                     tal:attributes="href string:${parent/absolute_url}/topics/${topic/getId};
                                     title topic/Description;" >
                    <span tal:content="topic/title_or_id" />
                    (<b tal:content="python:len(topic.getLazyEntries())"/>)
                  </a>
                </div>	
              </li>
            </tal:loop>
          </ul>
        </dd>
      </dl>
    </div>
  </body>
</html>
