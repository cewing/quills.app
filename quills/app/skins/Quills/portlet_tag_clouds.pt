<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="quills">
  <body>
    <div metal:define-macro="portlet"
         tal:omit-tag=""
         tal:define="tagcloudview context/@@tagcloudview;
                     pclouds tagcloudview/getClouds;
                     multiple python:len(pclouds)>1"
         tal:condition="pclouds">
      <dl class="portlet"
          id="portlet-weblogclouds"
          tal:repeat="pcloud pclouds">
        <tal:perblog
          tal:define="weblog nocall:pcloud/weblog;
                      items pcloud/cloud">

              <div metal:use-macro="here/tag_cloud/macros/tag_cloud">
                Render a tag cloud. Adding blog name if multiple is true.
              </div>

        </tal:perblog>
      </dl>
    </div>
  </body>
</html>
