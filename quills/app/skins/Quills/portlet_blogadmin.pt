<html 
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
   xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="quills">
  <header><title></title></header>
  <body>
    <div metal:define-macro="portlet"
         tal:omit-tag=""
         tal:condition="python:here.isWeblogContent() and member.has_permission('Modify portal content', here)">

    <dl class="portlet"
        id="portlet-blogadmin">
    <dt class="portletHeader"
        i18n:translate="portlet_blogadmin_heading">
     Blog Admin
     </dt>
    <dd class="portletItem lastItem">
     <ul>
      <li>
        <a title="Add new blog entry"
           i18n:translate="portlet_blogadmin_new_entry"
           i18n:attributes="title"
           href="./createObject?type_name=WeblogEntry">
          Add Entry
         </a>
      </li>
     <li>
        <a title="View Drafts"
         i18n:translate="portlet_blogadmin_view_drafts"
         i18n:attributes="title"
         href="./weblogdrafts_view">
         View Drafts
        </a>
     </li>
     <li>
        <a title="Manage Comments"
         i18n:translate="portlet_blogadmin_manage_comments"
         i18n:attributes="title"
         href="./manage_comments">
         Manage Comments
        </a>
     </li>
     <li>
        <a title="View Archive"
         i18n:translate="portlet_blogadmin_view_archives"
         i18n:attributes="title"
         href="./archive">
         View Archive
        </a>
     </li>
    </ul>
    </dd>
    </dl>
    </div>
  </body>
</html>
