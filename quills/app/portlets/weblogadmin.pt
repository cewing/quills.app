<dl class="portlet portletWeblogAdmin"
    i18n:domain="plone">

    <dt class="portletHeader">
        <span class="portletTopLeft"></span>
        <span class="tile"
              tal:content="view/title">_title_</a>
        <span class="portletTopRight"></span>
    </dt>

    <dd class="portletItem odd">
       <a title="Add new blog entry"
          i18n:translate="portlet_blogadmin_new_entry"
          i18n:attributes="title"
          href="./createObject?type_name=WeblogEntry">
         Add Entry
        </a>
    </dd>
    <dd class="portletItem even">
       <a title="View Drafts"
        i18n:translate="portlet_blogadmin_view_drafts"
        i18n:attributes="title"
        href="./weblogdrafts_view">
        View Drafts
       </a>
    </dd>
    <dd class="portletItem odd">
       <a title="Manage Comments"
        i18n:translate="portlet_blogadmin_manage_comments"
        i18n:attributes="title"
        href="./manage_comments">
        Manage Comments
       </a>
    </dd>
    <dd class="portletItem even">
       <a title="View Archive"
        i18n:translate="portlet_blogadmin_view_archives"
        i18n:attributes="title"
        href="./archive">
        View Archive
       </a>
    </dd>

    <dd class="portletFooter">
        <a href=""
           tal:attributes="href view/all_news_link"
           i18n:translate="box_more_news_link">
          More news&hellip;
        </a>
        <span class="portletBottomLeft"></span>
        <span class="portletBottomRight"></span>
    </dd>

</dl>
